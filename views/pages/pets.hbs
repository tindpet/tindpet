<form>
  <input class="search"
    value="{{query.search}}"
    name="search"
    type="text"
    placeholder="Search"
  />
</form>
<hr />

<div class="pets">
  {{#each pets as |pet|}}
    <div class="pet">
      <img src="{{pet.image}}" />
      <div class="text">
        <p class="title">{{pet.name}}, {{pet.age}}</p>
        <a class='details' href="/pets/{{pet.id}}">Detail</a>
      </div>
    </div>
  {{/each}}
</div>