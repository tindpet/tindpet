<div class="form-container">
  <h1>Update</h1>

  <form action="/pets/{{pet.id}}" method="POST" enctype="multipart/form-data">
    <div class="image">
      <div class="preview">
        <img id="pet-img-preview" src="{{pet.image}}" />
      </div>
      <div class="form-section">
        <label for="image">We need a photo for getting to know your animal!</label>
        <input
          id="#input-photo-pet"
          type="file"
          accept="image"
          name="image"
          onchange="previewImage(event, '#pet-img-preview')"
        />
      </div>
      name<input type="text" name="name" value="{{pet.name}}">
      age<input type="number" name="age" value="{{pet.age}}">
      specie<input type="text" name="specie" value="{{pet.specie}}">
      gender<input type="text" name="gender" value="{{pet.gender}}">
    </div>
      <div class="form-section">
        <label for="about">How is he/she? What specie is, what is his/her charaacter...</label>
        <textarea name="about" cols="30" rows="10">{{pet.description}}</textarea>
      </div>

      <button type="submit">Update</button>
